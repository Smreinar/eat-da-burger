 <div class="container">
     <div class="row">
         <div class="col-sm-6">
            
             <ul id="newBurgUl" class="list-group">
                 <h3>Ready To Eat</h3>
                 {{#each burgers}}
                 {{#unless devoured}}
                 <li class="list-group-item list-group-item-success">{{burger_name}} <button class=" btn btn-primary devourdbtn" data-id={{id}}>Devoured</button></li>
                 {{/unless}}
                 {{/each}}
             </ul>


         </div>
         <div class="col-sm-6">
             
             <ul id="devouredUl" class="list-group">
                 <h3>Devoured</h3>
                 {{!-- <li class="list-group-item list-group-item-danger">Devoured</li> --}}
                 {{#each burgers}}
                    {{#if devoured}}
                    <li class="list-group-item list-group-item-warning">{{burger_name}}</li>
                    {{/if}}
                 {{/each}}
             </ul>
         </div>
     </div>

     <div class="row">
        <div class="col-sm-12">
            <div class="input-group mb-3">
                
                    <input type="text" id="burger" class="form-control" placeholder="Type New Burger Here" aria-label="Type New Burger Here" aria-describedby="basic-addon2">
                    
                    <div class="input-group-append">
                        <button id="addbtn" class="btn btn-outline-success btn-light">Add Burger</button>
                    </div>
            
            </div>
        </div>
     </div>
 </div>